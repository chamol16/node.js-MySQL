<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="mt-3">
                            <input type="text" class="form-control" name="title" placeholder="Title" value="{{link.title}}" autofocus />
                        </div>
                        <div class="mt-3">
                            <input type="url" class="form-control" name="url" placeholder="URL" value="{{link.url}}" required />
                        </div>
                        <div class="mt-3">
                            <textarea name="description" id="" rows="2" class="form-control"
                                placeholder="description">{{link.description}}</textarea>

                        </div>
                        <div class="mt-3">
                            <button type="submit" class="mt-3 btn btn-success w-100">Save</button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>